<div class="container-fluid px-4">
  <h1 class="mt-4">School Detail</h1>
  <div class="card mb-4">
    <div class="card-body">
      <div class="card-custom">
		    <h3 style="text-align:center;"><%= @school.name %></h3>
		    <h5 style="text-align:center;">Code: <%= @school.code %></h5>
		    <div class="row global-pad row_styles">
		      <div class="col-md-4">
		      	<h4>Description</h4>
		      	<ul>
		      	   <%= @school.description %>
		      	</ul> 
		      </div>	
		    </div>
		    <div class="row global-pad row_styles">
		      <div class="col-md-4">
		      	<h4>Address</h4>
		      	<ul>
		      	   <li><b>Street:</b> <%= @school.street %></li>
		      	   <li><b>City:</b> <%= @school.city %></li>
		      	   <li><b>Country</b> <%= @school.country %></li>
		      	</ul> 
		      </div>	
		    </div>
		    <div class="row">
		      <div class="col-md-12">
		      	<h4>Courses</h4> 
						<table class="table table-striped table-bordered table-hover" id="list-data">
							  <thead>
							    <tr>
							        <th>Course Name</th>
							        <th>Course Code</th>
							        <th>Duration</th>
							    </tr>
							  </thead>
								<tbody>
							    <% @school.courses.each do |course| %>	
							      <tr>
							        <td><%= course.name %></td>
											<td><%= course.code %></td>
											<td><%= course.duration %> Months</td>
							      </tr>
							    <% end %>
							  </tbody>
							</table>
		      </div>	
		    </div>
		    <% unless current_user.student? %>
			    <div class="row global-pad row_styles">
			      <div class="col-md-4">
			      	<h4>School Admin</h4>
			      	<ul>
			      	   <%= @school.school_admin&.name&.titleize %>
			      	</ul> 
			      </div>	
			    </div>
			  <% end %>
			  <% if current_user.student? %>
				  <div class="row global-pad row_styles">
			      	<h4>Batches</h4>
			      	<table class="table table-striped table-bordered table-hover" id="list-data-1">
							  <thead>
							    <tr>
							        <th>Batch Name</th>
							        <th>Batch Start Date</th>
							        <th>Batch End Date</th>
							        <th>Batch Course Name</th>
							    </tr>
							  </thead>
							  <tbody>
							    <% @school.batches.each do |batch| %>
							      <tr>
							        <td><%= batch.name %></td>
							        <td><%= batch.start_date %></td>
							        <td><%= batch.end_date %></td>
							        <td><%= batch.course.name %></td>       
							      </tr>
							    <% end %>
							  </tbody>
							</table>
			    </div>
			  <% end %>  
      </div>
      <div class="row" style="margin: 10px 0 10px 0;">
      	<% unless current_user.student? %>
	    		<div class="col-md-1">
	          <%= link_to 'Edit', edit_school_path(@school.id), class: "btn btn-outline-primary" %>
	        </div>
	      <% end %>  
        <div class="col-md-1">
          <%= link_to 'Back', schools_path, class: "btn btn-outline-secondary" %>
        </div>
	    </div>  
    </div>
  </div>
</div>
