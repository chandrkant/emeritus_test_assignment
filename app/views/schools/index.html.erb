<div class="container-fluid px-4">
    <h1 class="mt-4">Schools List</h1>
    <div class="card mb-4">
      <div class="card-body">
        <div class="row" style="margin-bottom:10px;">
          <div class="col-sm-12 col-xs-12">
            <form action="/schools" accept-charset="UTF-8" method="get">
              <div class="row">
                <div class="col-md-2">
                  <input type="text" name="name" value="<%= params[:name] %>" class="form-control" placeholder="Search by name.." aria-controls="list" id="searchBox">
                </div>
                <div class="col-md-2">
                  <input type="text" name="city" value="<%= params[:city] %>" class="form-control" placeholder="Search by city" aria-controls="list" id="searchBox">
                </div>
                <div class="col-md-2">
                  <input type="text" name="country" value="<%= params[:country] %>" class="form-control" placeholder="Search by country" aria-controls="list" id="searchBox">
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-1">
                  <%= link_to "Clear", schools_path, class: "btn btn-outline-primary float-end" %>
                </div>
                <div class="col-sm-2">
                  <input type="submit" name="commit" value="Search" class="btn btn-primary">
                </div>
                <div class="col-md-1">
                  <% if current_user.admin? %>
                    <a href="<%= new_school_path %>" data-title="Compose" class="btn btn-primary" style="color: #fff;">+Add</a>
                  <% end %>  
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="row">
            <div class="col-md-12">
              <!-- BEGIN TABLE -->
              <%= render partial: "schools/list" %>
              <%= paginate @schools %>
              <!-- END TABLE -->
            </div>
        </div>
      </div>
    </div>
</div>
