<div class="row justify-content-center">
  <div class="col-lg-7">
    <div class="card shadow-lg border-0 rounded-lg mt-3">
        <div class="card-header">
          <h3 class="text-center font-weight-light">Create Account</h3>
          <p class="text-center" style="margin-bottom: 0px">Student signup to enroll in courses</p>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :type, value: 'Student' %>
            <div class="form-outline mb-4">
              <label class="form-label" for="form3Example3">Email address</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "form3Example3", class: "form-control form-control-lg", placeholder: "Enter a valid email address" %>
            </div>
            <div class="form-outline mb-4">
              <label class="form-label" for="form3Example4">Name</label>
              <%= f.text_field :name, autofocus: true, id: "form3Example4", class: "form-control form-control-lg", placeholder: "Enter your name" %>
            </div>
            <div class="form-outline mb-4">
              <%= f.radio_button :gender, 'Male', id: 'gender_male', class: 'form-check-input' %>
              <label for="gender_male" class="form-check-label">Male</label>

              <%= f.radio_button :gender, 'Female', id: 'gender_female', class: 'form-check-input' %>
              <label for="gender_female" class="form-check-label">Female</label>
            </div>
            <div class="form-outline mb-3">
              <label class="form-label" for="form3Example5">Password</label>
              <%= f.password_field :password, autocomplete: "new-password", id: "form3Example5", class: "form-control form-control-lg", placeholder: "Enter password" %>
            </div>
            <div class="form-outline mb-3">
              <label class="form-label" for="form3Example6">Password Confirmation</label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "form3Example6", class: "form-control form-control-lg", placeholder: "Confirm your password" %>
            </div>
            <div class="mt-4 mb-0">
              <div class="d-grid">
                <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center py-3">
            <div class="small"><a href="/users/sign_in">Have an account? Go to login</a></div>
        </div>
    </div>
  </div>
</div>
    