<div class="row">
  <div class="col-md-12">
    <!-- BEGIN PORTLET-->
        <!-- BEGIN FORM-->
        <%= form_for(@student, html: {class: 'form-horizontal' }) do |f| %>
          <div class="form-body">
            <div class="row">
              <div class="form-group school_form">
                <label class="control-label col-md-3">Student Name<font color="red">*</font></label>
                <div class="col-md-9">
                  <%= f.text_field :name, class: "form-control", required: true %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group school_form">
                <label class="control-label col-md-3">Student Email<font color="red">*</font></label>
                <div class="col-md-9">
                  <%= f.email_field :email, class: "form-control", readonly: f.object.persisted? %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="form-group school_form">
                <%= f.radio_button :gender, 'Male', id: 'gender_male', class: 'form-check-input' %>
                <label for="gender_male" class="form-check-label">Male</label>

                <%= f.radio_button :gender, 'Female', id: 'gender_female', class: 'form-check-input' %>
                <label for="gender_female" class="form-check-label">Female</label>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group school_form">
                  <label class="control-label col-md-3">Password<font color="red">*</font></label>
                  <div class="col-md-9">
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter password" %>
                    <small class="form-text text-muted">Password Suggestion: <%= generate_password_suggestion %>  </small>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-actions fluid">
              <div class="row">
                <div class="col-md-6">
                  <div class="col-md-offset-3 col-md-9">
                    <div class="row">
                      <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                      <div class="col-md-4">  
                        <a href="<%= students_path %>" class="btn btn-outline-secondary">Cancel</a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                </div>
              </div>
            </div>
            <!-- END FORM-->
          </div>  
        <% end %>
      <!-- End PORTLET-->
    <!-- End FORM-->               
  </div>
</div>
      


