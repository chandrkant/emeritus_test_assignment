<div class="container-fluid px-4">
  <h1 class="mt-4">Student Details</h1>
  <div class="card mb-4">
    <div class="card-body">
      <table class="table table-striped table-bordered table-hover">
			  <thead>
			    <tr>
		        <th>Name</th>
		        <th>Email</th>
		        <th>Gender</th>
		        <th>Created At</th>
		        <th>Actions</th>
			    </tr>
			  </thead>
			  <tbody>
		      <tr>
		        <td><%= @student.name %></td>
		        <td><%= @student.email %></td>
		        <td><%= @student.gender %></td>
		        <td><%= @student.created_at %></td>       
		        <td>
		          <%= link_to ('<i class="fa fa-edit"></i>').html_safe, edit_student_path(@student.id), title: "Edit" %>  
		         </td>
		      </tr>
			  </tbody>
			</table>
			<div class="row" style="margin: 10px 0 10px 0;">
    		<div class="col-md-1">
          <%= link_to 'Edit', edit_student_path(@student.id), class: "btn btn-outline-primary" %>
        </div>
        <div class="col-md-1">
          <%= link_to 'Back', students_path, class: "btn btn-outline-secondary" %>
        </div>
	    </div>
    </div>
  </div>
</div>

