<div class="container-fluid px-4">
  <h1 class="mt-4">Batch Detail</h1>
  <div class="card mb-4">
    <div class="card-body">
      <div class="card-custom">
		    <h3 style="text-align:center;"><%= @batch.name %></h3>
		    <div class="row global-pad row_styles" >
		      <div class="col-md-4">
		      	<h4>Date</h4>
		      	<ul>
		      	   <li><b>Start Date:</b> <%= @batch.start_date %></li>
		      	   <li><b>End Date:</b> <%= @batch.end_date %></li>
		      	</ul> 
		      </div>	
		    </div>
		    <div class="row global-pad row_styles" >
		      <div class="col-md-4">
		      	<h4>School Name</h4>
		      	<ul>
		      	   <%= @batch.school.name %>
		      	</ul> 
		      </div>	
		    </div>
		    <div class="row global-pad row_styles" >
		      <div class="col-md-4">
		      	<h4>Course</h4>
		      	<ul>
		      	   <%= @batch.course.name %>
		      	</ul> 
		      </div>	
		    </div>
      </div>
      <div class="row" style="margin: 10px 0 10px 0;">
    		<div class="col-md-1">
          <%= link_to 'Edit', edit_batch_path(@batch.id), class: "btn btn-outline-primary" %>
        </div>
        <div class="col-md-1">
          <%= link_to 'Back', batches_path, class: "btn btn-outline-secondary" %>
        </div>
	    </div>  
    </div>
  </div>
</div>
