<div class="container-fluid px-4">
  <h1 class="mt-4">Course Detail</h1>
  <div class="card mb-4">
    <div class="card-body">
      <div class="card-custom">
		    <h3 style="text-align:center;"><%= @course.name %></h3>
		    <div class="row global-pad row_styles">
		      <div class="col-md-4">
		      	<h4>Code</h4>
		      	<ul>
		      	   <%= @course.code %>
		      	</ul> 
		      </div>	
		    </div>
		    <div class="row global-pad row_styles">
		      <div class="col-md-4">
		      	<h4>Duration</h4>
		      	<ul>
		      	   <%= @course.duration %>
		      	</ul> 
		      </div>	
		    </div>
      </div>
      <div class="row" style="margin: 10px 0 10px 0;">
    		<div class="col-md-1">
          <%= link_to 'Edit', edit_course_path(@course.id), class: "btn btn-outline-primary" %>
        </div>
        <div class="col-md-1">
          <%= link_to 'Back', courses_path, class: "btn btn-outline-secondary" %>
        </div>
	    </div>  
    </div>
  </div>
</div>
